-- =============================================================================
-- Test identity at non-symmetric point: α=π/2, β=γ=π/4
-- cos(π/2) = 0, cos(π/4) = √2/2
-- =============================================================================

:set-timeout 60
:optimize on

-- cx = cos(π/2) = 0
:assume (= cx 0)

-- cy = cz = cos(π/4) = √2/2, so cy² = cz² = 1/2
:assume (= (^ cy 2) (/ 1 2))
:assume (> cy 0)
:assume (= cz cy)

-- Verify identity: cx² + cy² + cz² + 2*cx*cy*cz = 0 + 1/2 + 1/2 + 0 = 1
:auto (= (+ (^ cx 2) (+ (^ cy 2) (+ (^ cz 2) (* 2 (* cx (* cy cz)))))) 1)

