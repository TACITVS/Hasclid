-- 6. Intermediate Variables
:assume (= z_LHS (^ z_S4_sq 3))
:assume (= z_RHS (* 27 (* (^ z_TermA 2) (* (^ z_TermB 2) (^ z_TermC 2)))))
:assume (= z_Diff (- z_LHS z_RHS))

-- 7. The Goal
:prove (>= z_Diff 0)