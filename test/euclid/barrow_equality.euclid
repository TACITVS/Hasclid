-- =============================================================================
-- BARROW'S INEQUALITY - EQUALITY CASE
-- =============================================================================
-- At equality: P at centroid of equilateral triangle
-- α = β = γ = π/3 (each half-angle is 60°)
-- cos(π/3) = 1/2
-- tan(π/3) = √3, so tan²(π/3) = 3
--
-- With a = b = c (symmetric distances), verify:
--   a + b + c = (b+c)*cx + (c+a)*cy + (a+b)*cz
-- becomes: 3a = 2a*(1/2) * 3 = 3a ✓
-- =============================================================================

:set-timeout 60
:optimize on

-- Symmetric case: a = b = c = 1
:assume (= a 1)
:assume (= b 1)
:assume (= c 1)

-- Symmetric half-angles: cx = cy = cz = 1/2
:assume (= cx (/ 1 2))
:assume (= cy (/ 1 2))
:assume (= cz (/ 1 2))

-- Verify equality holds
:assume (= lhs (+ a (+ b c)))
:assume (= rhs (+ (* (+ b c) cx) (+ (* (+ c a) cy) (* (+ a b) cz))))

:auto (= lhs rhs)

