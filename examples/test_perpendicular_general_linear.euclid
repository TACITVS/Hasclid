:set-timeout 10

-- General (non-axis aligned) perpendicularity should yield linear relation yD = 1 - xD
:reset
:point A 0 0
:point B 1 1
:point C 0 1
:point D x y
:assume (= (perpendicular A B C D) 0)
(= yD (- 1 xD))

-- Symbolic linear solving and commutativity
:reset
:assume (= (+ x S) (* 2 S))
(= x S)
(= (+ S x) (+ x S))

:q
