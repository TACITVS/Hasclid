-- ============================================================================
-- Rational Function Elimination Tests
-- Testing division by variables (f/g syntax)
-- ============================================================================

:verbose

-- ============================================================================
-- TEST 1: Simple inequality with division
-- ============================================================================
:assume (> x 0)
:assume (> y 0)
(>= (/ x y) 0)

-- ============================================================================
-- TEST 2: Division equals zero
-- ============================================================================
:assume (= x 0)
:assume (!= y 0)
(= (/ x y) 0)

-- ============================================================================
-- TEST 3: Nested division simplification
-- x / (y / z) should equal (x * z) / y
-- ============================================================================
:assume (> x 1)
:assume (> y 1)
:assume (> z 1)
(= (/ x (/ y z)) (/ (* x z) y))

-- ============================================================================
-- TEST 4: Fraction addition
-- (a/b) + (c/d) = (ad + bc) / (bd)
-- ============================================================================
:assume (> a 0)
:assume (> b 0)
:assume (> c 0)
:assume (> d 0)
(= (+ (/ a b) (/ c d)) (/ (+ (* a d) (* b c)) (* b d)))

-- ============================================================================
-- TEST 5: Morley-like expression
-- Testing rational expressions similar to Morley's theorem angle trisection
-- ============================================================================
:assume (> sA2 0)
:assume (> tB 0)
:assume (= tA (/ 1 (+ sA2 (/ 1 tB))))
(> tA 0)

-- ============================================================================
-- TEST 6: Simple division equality
-- ============================================================================
:assume (= x 6)
:assume (= y 2)
(= (/ x y) 3)

-- ============================================================================
-- TEST 7: Division with sqrt (combined elimination)
-- ============================================================================
:assume (> n 0)
(= (/ n (sqrt n)) (sqrt n))

-- ============================================================================
-- TEST 8: Comparing two divisions
-- ============================================================================
:assume (> a 0)
:assume (> b 0)
:assume (> c 0)
:assume (> d 0)
:assume (> (* a d) (* b c))
(> (/ a b) (/ c d))

-- ============================================================================
-- TEST 9: Division inequality sign change
-- If f < 0 and g < 0, then f/g > 0
-- ============================================================================
:assume (< x 0)
:assume (< y 0)
(> (/ x y) 0)

-- ============================================================================
-- TEST 10: Self-division equals 1
-- ============================================================================
:assume (!= x 0)
(= (/ x x) 1)
