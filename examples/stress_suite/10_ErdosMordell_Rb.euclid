; Level 10: Erdos-Mordell (Component B)
; R_b >= d_a + d_c
; The boss.

:set-timeout 180

:assume (= (^ s 2) 3)
:assume (> s 0)
:assume (> y 0)
:assume (> (+ (- (* s x) y) s) 0)
:assume (> (+ (- (* (- 0 s) x) y) s) 0)
:assume (= da y)
; Eliminate division by multiplying through
:assume (= (* 2 dc) (+ (- (* s x) y) s))
:assume (= (^ Rb 2) (+ (^ (+ x 1) 2) (^ y 2)))
:assume (>= Rb 0)
:assume (>= da 0)
:assume (>= dc 0)

; Prove: Rb >= da + dc (squared form)
:auto (>= (^ Rb 2) (^ (+ da dc) 2))
:q
